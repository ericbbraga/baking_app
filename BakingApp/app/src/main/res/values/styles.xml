<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="TitleCursive">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleStyle" parent="TitleCursive">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="TitleStyleDescription" parent="TitleCursive">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TitleStyleIngredients" parent="TitleCursive">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleStyleStep" parent="TitleCursive">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleStyleMedia" parent="TitleCursive">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="IngredientsRecipeStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DescriptionRecipeStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleWarning">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleRecipeWidget" parent="TitleCursive">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TitleIngredientItemWidget" parent="TitleCursive">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Progress">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertImage">
        <item name="android:src">@android:drawable/ic_dialog_alert</item>
        <item name="android:tint">#000000</item>
    </style>

    <style name="ImagePlay" parent="ExoMediaButton.Play">
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <style name="ImagePause" parent="ExoMediaButton.Pause">
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

</resources>
