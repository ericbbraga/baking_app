<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/steps_short_description"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/steps_next_image"
        style="@style/TitleStyleStep"/>

    <ImageView
        android:id="@+id/steps_next_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:tint="@color/colorPrimaryDark"
        android:src="@android:drawable/ic_media_play"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/more_step_details"
        app:layout_constraintLeft_toRightOf="@+id/steps_short_description"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>